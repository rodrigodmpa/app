<div class="container-fluid">
  <blockquote class="blockquote text-center">
    <p class="mb-0"><h2>Listing sites of:</h2> </p>
    <footer class="blockquote-footer"> <cite title="Source Title"><%=current_user.name%></cite></footer>
  </blockquote>
  <table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">Link</th>
        <th colspan="3" align="center" scope="col" >Actions</th>
      </tr>
    </thead>
  
    <% @sites.each do |site| %>
      <tr scope="row">
        <td><%= link_to site.title, site.text, :target => "_blank", :class => "badge badge-success" %></td>
        <td><%= link_to 'Show', site_path(site), :class => "badge badge-info" %></td>
        <td><%= link_to 'Edit', edit_site_path(site), :class => "badge badge-warning" %></td>
        <td><%= link_to 'Destroy', site_path(site), method: :delete, data: {confirm: 'Are you sure?'}, :class => "badge badge-danger" %></td>
      </tr>
    <% end %>
  </table>
  
  <%= link_to 'Add new site', new_site_path, :class => "btn btn-outline-secondary" %>
  <%= link_to 'Back', root_path , :class => "btn btn-outline-secondary" %>
</div>